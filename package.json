{
  "name": "joautomation-ai-accounting",
  "version": "1.0.0",
  "description": "AI-powered accounting automation system",
  "main": "server.js",
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:js": "node start-server.js",
    "dev:ts": "node start-server.js --ts",
    "build": "tsc",
    "start": "node server.js",
    "start:js": "node server.js",
    "start:ts": "tsx src/server.ts",
    "lint": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "worker:start": "cd apps/worker-py && python main.py",
    "worker:install": "cd apps/worker-py && pip install -r requirements.txt",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "postinstall": "npm run db:generate"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.893.0",
    "@aws-sdk/s3-request-presigner": "^3.893.0",
    "@google-cloud/vision": "^5.3.3",
    "@prisma/client": "^6.16.2",
    "@types/dompurify": "^3.0.5",
    "@types/pdf-parse": "^1.1.5",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.7",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "helmet": "^7.0.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "ioredis": "^5.7.0",
    "isomorphic-dompurify": "^2.28.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "multer": "^1.4.5-lts.1",
    "next": "^14.2.32",
    "next-i18next": "^15.4.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^6.9.4",
    "openai": "^4.0.0",
    "pdf-lib": "^1.17.1",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.0",
    "pdf2pic": "^2.1.4",
    "postcss": "^8.5.6",
    "prisma": "^6.16.2",
    "puppeteer": "^24.22.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.32.5",
    "tailwindcss": "^4.1.13",
    "tesseract.js": "^4.1.1",
    "uuid": "^13.0.0",
    "xlsx": "^0.18.5",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/mongoose": "^5.11.96",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.6.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "preset": "ts-jest",
    "transformIgnorePatterns": [
      "node_modules/(?!(uuid)/)"
    ]
  },
  "keywords": [
    "ai",
    "accounting",
    "automation",
    "pdf",
    "ocr",
    "financial-analysis"
  ],
  "author": "JoAutomation",
  "license": "MIT"
}
